<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <!-- Progress Tracker Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress Tracker"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:importantForAccessibility="yes" />

    <!-- Task Name Input -->
    <EditText
        android:id="@+id/taskNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Name"
        android:textSize="16sp"
        android:padding="12dp"
        android:textColor="@color/primaryTextColor"

        android:contentDescription="Task Name Input Field"
         />

    <!-- Spacer between inputs -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Progress Status Input -->
    <EditText
        android:id="@+id/progressStatusInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Progress Status"
        android:textSize="16sp"
        android:padding="12dp"
        android:textColor="@color/primaryTextColor"
        android:importantForAccessibility="yes"
        android:contentDescription="Progress Status Input Field"
         />

    <!-- Spacer between input fields and button -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Add Progress Button -->
    <Button
        android:id="@+id/addProgressButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Progress"
        android:backgroundTint="@color/secondaryColor"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:importantForAccessibility="yes"
        android:contentDescription="Add Progress Button"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:padding="14dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:elevation="4dp" />

    <!-- Progress List Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress List"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Progress List Section Title" />

    <!-- Task List (Static Example) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:elevation="6dp"
        android:background="@drawable/rounded_card"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project 1 - In Progress"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="4dp"
            android:importantForAccessibility="yes"
            android:contentDescription="Project Task Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50% Complete"
            android:textSize="14sp"
            android:textColor="@color/secondaryTextColor"
            android:importantForAccessibility="yes"
            android:contentDescription="Progress Status"/>
    </LinearLayout>

</LinearLayout>
